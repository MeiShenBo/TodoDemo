<resources>

      <style name="OverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
          <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
            <item name="overlapAnchor">false</item>
            <item name="android:dropDownWidth">wrap_content</item>
            <item name="android:paddingRight">5dp</item>
             <!-- 弹出层背景颜色 -->
            <item name="android:popupBackground">@color/white</item>
             <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
            <item name="android:dropDownVerticalOffset">5dp</item>
             <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
             <item name="android:dropDownHorizontalOffset">0dp</item>
             <!-- 设置弹出菜单文字颜色 -->
            <item name="android:textColor">@color/threeB8DDF</item>
             <item name="android:textSize">18sp</item>

        </style>

        <style name="AppTheme.ActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
           <item name="overlapAnchor">false</item>
           <!-- 弹出层背景颜色 -->
           <item name="android:popupBackground">@color/white</item>
            <!-- 设置弹出菜单文字颜色 -->
            <item name="android:textColor">@color/menuIconColor</item>
            <item name="actionMenuTextAppearance">@style/AppTheme.actionMenuTextSize</item>
            <item name="android:actionOverflowMenuStyle">@color/threeB8DDF</item>
            <item name="android:backgroundSplit">@color/white</item>
        </style>

        <style name="AppTheme.actionMenuTextSize" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Menu">
            <item name="android:textSize">18sp</item>
            <item name="android:textStyle">normal</item>
        </style>


</resources>
